doctype html
html#ng-app(xmlns:ng='http://angularjs.org', ng-app='demo', lang='en')
    head
        meta(charset='UTF-8')
        meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
        meta(name='keywords', content='Angular Pure Datepicker')
        meta(http-equiv='Cache-Control', content='no-cache')
        meta(name='viewport', content='width=device-width, initial-scale=1.0')
        link(href='bower_components/bootstrap/dist/css/bootstrap.min.css', rel='stylesheet', media='all')
        link(href='angular-pure-datepicker/dist/angular-pure-datepicker.css', rel='stylesheet', media='all')
        link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Roboto:400,300,400italic,500,700,900&subset=latin,cyrillic', type='text/css')
        script(src='bower_components/angular/angular.js', type='text/javascript')
        script(src='angular-pure-datepicker/dist/angular-pure-datepicker.js', type='text/javascript')
        script(src='index.js', type='text/javascript')
        <!--[if lt IE 9]>
        script(src='bower_components/json3/lib/json3.min.js', type='text/javascript')
        <![endif]-->
        title Angular Pure Datepicker
    body
        #content_view.container
            #demo_page(ng-controller="DemoPageCtrl")
                section#common_case
                    hgroup
                        h1 Common case
                        h3 ---------------
                    .case_description
                        | ---------------
                    form#demo_simple_form(name="demo_simple_form")
                        .form-group
                            label.control-label(for="apd_1") Date
                            pure-datepicker#apd_1(ng-model="resultModel")
                    div
                        span(ng-bind="resultModel")